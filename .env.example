# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=claude_company
DB_SSLMODE=disable

# API Server Configuration
PORT=8080
GIN_MODE=release

# Claude Company Configuration
TMUX_SESSION_NAME=claude-squad
CLAUDE_COMMAND=claude --dangerously-skip-permissions

# Async Task Executor Configuration
MAX_WORKERS=5
TASK_QUEUE_SIZE=100
MONITOR_INTERVAL=30s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: PostgreSQL Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300s